<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.disha.wearableproject">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            android:label="Login to your Account">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Entry for RegisterActivity.class -->
        <activity
            android:name=".RegisterActivity"
            android:label="Register New Account" />
        <!-- Entry for HistoryActivity.class -->
        <activity
            android:name=".HistoryActivity"
            android:label="User History" />
        <!-- Entry for BluetoothActivity.class -->
        <activity
            android:name=".BluetoothActivity"
            android:label="Bluetooth devices" />
        <activity android:name=".TestListActivity" />
        <activity
            android:name=".TremorActivity"
            android:label="@string/title_activity_tremor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".TremorRestActivity"></activity>
    </application>

</manifest>