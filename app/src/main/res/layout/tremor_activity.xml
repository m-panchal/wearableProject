<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">


    <!--  Header  Starts-->
    <LinearLayout android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dip"
        android:paddingBottom="50dip"
        android:orientation="horizontal">
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tremor Assessment"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@android:color/black"
        android:textSize="30sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:text="Select a Test:"
        android:textColor="@android:color/black"
        android:textSize="25sp"/>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_gravity="center">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/correct_mark"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvRest"
            style="@style/CategoryStyleSub"
            android:textColor="@android:color/white"
            android:text="Rest Tremor"
            android:textAlignment="center"
            android:background="@color/colorMaroon"/>

    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/correct_mark"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvPostural"
            style="@style/CategoryStyleSub"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:background="@color/colorWarmGrey"
            android:text="Postural Tremor" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/correct_mark"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvIntention"
            style="@style/CategoryStyleSub"
            android:textColor="@android:color/white"
            android:text="Intention Tremor"
            android:textAlignment="center"
            android:background="@color/colorMaroon"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/correct_mark"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvKinetic"
            style="@style/CategoryStyleSub"
            android:background="@color/colorWarmGrey"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:text="Kinetic Tremor"/>

    </LinearLayout>

</LinearLayout>